  "fhirSearch": "?patient={{Patient}}&code:in=https://aiccelerate.eu/fhir/ValueSet/parkinson-cognitive-behavioral-assessments&_include=Observation:patient",
  "entities": {
    "pid": "Patient"
  },
  "timestamp": "time",
  "feature": [
    {
      "name": "pid",
      "title": "Patient identifier",
      "description": "Patient identifier",
      "dataType": "id",
      "fhirPath": "Observation.subject"
    },
    {
      "name": "time",
      "title": "Assessment date ",
      "description": "Assessment date",
      "dataType": "dateTime",
      "fhirPath": "Observation.effectiveDateTime.nav:orElse(Observation.effectivePeriod.start)"
    },
    {
      "name": "code",
      "title": "Assessment type",
      "description": "Code for the assessment type e.g. 72106-8 -> MMSE, 72172-0 -> MOCA",
      "dataType": "code",
      "fhirPath": "Observation.code.coding.where(system='http://snomed.info/sct' or system='https://aiccelerate.eu/fhir/CodeSystem/parkinson-cognitive-behavioral-assessments' or system='http://loinc.org').code.first()"
    },
    {
      "name": "concept",
      "title": "Cognitive or behavioral domain under assessment",
      "description": "Cognitive or behavioral domain that is assessed with this assessment e.g. cognition, anxiety, etc.",
      "dataType": "code",
      "fhirPath": "fst:getContext(%assessmentContext, %code).concept"
    },
    {
      "name": "score",
      "title": "Score of the assessment",
      "description": "Numeric value of the assessment",
      "dataType": "decimal",
      "fhirPath": "Observation.valueQuantity.value"
    },
    {
      "name": "scoreScaled",
      "title": "Scaled score of the assessment",
      "description": "Scaled numeric value of the assessment (min-max normalization)",
      "dataType": "decimal",
      "fhirPath": "Observation.valueQuantity.value.fst:rescale(fst:getContext(%assessmentContext, iif(%code='273534002', iif(%context.subject.resolve().gender ='female', 'iadlForFemale', 'iadlForMale') ,%code)).range)"
    },
    {
      "name": "problemExists",
      "title": "Whether the cognitive/behavioral problem exists for the target domain",
      "description": "Whether the cognitive/behavioral problem exists for the target domain",
      "dataType": "boolean",
      "fhirPath": "Observation.valueBoolean or %score.fst:categorize(fst:getContext(%assessmentContext, %code).cutoff)"
    }
  ]
}
