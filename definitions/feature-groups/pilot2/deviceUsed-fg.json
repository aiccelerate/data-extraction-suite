{
  "url": "https://aiccelerate.eu/feature-groups/pilot2/device_used",
  "name": "device_used",
  "title": "Used Parkinson Related Devices",
  "description": "Parkinson related devices used by patient",
  "version": "0.1",
  "date": "2022-06-02",
  "fhirVersion": "4.0.1",
  "publisher": "AICCELERATE WP1 Team (SRDC Corp.)",
  "targetResourceType": "DeviceUseStatement",
  "targetProfile": "https://aiccelerate.eu/fhir/StructureDefinition/AIC-ParkinsonRelatedDeviceUsed",
  "fhirSearch": "?patient={{Patient}}&status=active,completed",
  "entities": {
    "pid": "Patient"
  },
  "timestamp": "startDate",
  "periodEnd": "endDate",
  "feature": [
    {
      "name": "pid",
      "title": "Patient identifier",
      "description": "Patient identifier",
      "dataType": "id",
      "fhirPath": "MedicationStatement.subject"
    },
    {
      "name": "startDate",
      "title": "Start date for use of device",
      "description": "Medication start date",
      "dataType": "date",
      "fhirPath": "MedicationStatement.effectivePeriod.start.toDate()"
    },
    {
      "name": "endDate",
      "title": "End date for use of device",
      "description": "Medication end date",
      "dataType": "date",
      "fhirPath": "MedicationStatement.effectivePeriod.end.toDate()"
    },
    {
      "name": "code",
      "title": "Code for the device used",
      "description": "Code for the device used (deep-brain-stimulator | levodopa-infusion-pump | apomorfine-pump)",
      "dataType": "code",
      "fhirPath": "MedicationStatement.medicationCodeableConcept.coding.where(system='http://www.whocc.no/atc').code"
    }
  ]
}